--// ü©∏ JELLY HUB - BY VEX
--// SECTION 1: Core Framework + Movement Tab
-- Place in StarterPlayerScripts
-- Section 2 will expand Players + GUI tabs.

-- CONFIG
local PLAYER = game.Players.LocalPlayer
local CHAR = PLAYER.Character or PLAYER.CharacterAdded:Wait()
local HUM = CHAR:WaitForChild("Humanoid")
local UIS = game:GetService("UserInputService")
local RS = game:GetService("RunService")
local TweenService = game:GetService("TweenService")

local INCREMENT = 2 -- Movement increment value

--// SCREEN GUI
local gui = Instance.new("ScreenGui")
gui.Name = "JellyHub"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = PLAYER:WaitForChild("PlayerGui")

--// OVERLAY
local overlay = Instance.new("Frame")
overlay.Size = UDim2.new(1, 0, 1, 0)
overlay.BackgroundColor3 = Color3.fromRGB(80, 0, 0)
overlay.BackgroundTransparency = 1
overlay.Visible = false
overlay.ZIndex = 1
overlay.Parent = gui

-- Fade animation
local function fadeOverlay(show)
	if show then
		overlay.Visible = true
		TweenService:Create(overlay, TweenInfo.new(0.3), {BackgroundTransparency = 0.5}):Play()
	else
		TweenService:Create(overlay, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
		task.delay(0.3, function()
			if overlay.BackgroundTransparency >= 1 then
				overlay.Visible = false
			end
		end)
	end
end

--// MAIN PANEL
local panel = Instance.new("Frame")
panel.Size = UDim2.new(0, 325, 0, 230)
panel.Position = UDim2.new(0.5, -162, 0.5, -115)
panel.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
panel.BackgroundTransparency = 0.08
panel.BorderSizePixel = 0
panel.Active = true
panel.Draggable = true
panel.Visible = false
panel.ZIndex = 2
panel.Parent = gui

-- Rounded edges
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 10)
corner.Parent = panel

--// TITLE BAR
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 40)
titleBar.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
titleBar.BorderSizePixel = 0
titleBar.ZIndex = 3
titleBar.Parent = panel

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0, 10)
titleCorner.Parent = titleBar

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 1, 0)
title.BackgroundTransparency = 1
title.Text = "ü©∏ Jelly Hub"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.ZIndex = 4
title.Parent = titleBar

local credit = Instance.new("TextLabel")
credit.Size = UDim2.new(1, -10, 0, 18)
credit.Position = UDim2.new(0, 0, 1, -20)
credit.BackgroundTransparency = 1
credit.Text = "By Vex"
credit.TextColor3 = Color3.fromRGB(255, 200, 200)
credit.Font = Enum.Font.GothamSemibold
credit.TextSize = 14
credit.ZIndex = 4
credit.Parent = titleBar

--// TAB BUTTONS BAR
local tabBar = Instance.new("Frame")
tabBar.Size = UDim2.new(1, 0, 0, 35)
tabBar.Position = UDim2.new(0, 0, 0, 40)
tabBar.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
tabBar.BorderSizePixel = 0
tabBar.ZIndex = 3
tabBar.Parent = panel

local function makeTabButton(name, position)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0.33, 0, 1, 0)
	btn.Position = UDim2.new(position, 0, 0, 0)
	btn.BackgroundColor3 = Color3.fromRGB(120, 0, 0)
	btn.Text = name
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 18
	btn.BorderSizePixel = 0
	btn.ZIndex = 4
	btn.Parent = tabBar

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 8)
	corner.Parent = btn
	return btn
end

local movementTabBtn = makeTabButton("Movement", 0)
local playersTabBtn = makeTabButton("Players", 0.33)
local guiTabBtn = makeTabButton("GUI", 0.66)

--// CONTENT AREA
local content = Instance.new("Frame")
content.Size = UDim2.new(1, 0, 1, -75)
content.Position = UDim2.new(0, 0, 0, 75)
content.BackgroundTransparency = 1
content.ZIndex = 3
content.Parent = panel

-- Tab containers
local movementTab = Instance.new("Frame")
movementTab.Size = UDim2.new(1, 0, 1, 0)
movementTab.BackgroundTransparency = 1
movementTab.ZIndex = 4
movementTab.Parent = content

local playersTab = Instance.new("Frame")
playersTab.Size = UDim2.new(1, 0, 1, 0)
playersTab.BackgroundTransparency = 1
playersTab.Visible = false
playersTab.ZIndex = 4
playersTab.Parent = content

local guiTab = Instance.new("Frame")
guiTab.Size = UDim2.new(1, 0, 1, 0)
guiTab.BackgroundTransparency = 1
guiTab.Visible = false
guiTab.ZIndex = 4
guiTab.Parent = content

-- Switch tab function
local function showTab(tab)
	movementTab.Visible = false
	playersTab.Visible = false
	guiTab.Visible = false
	tab.Visible = true
end

movementTabBtn.MouseButton1Click:Connect(function()
	showTab(movementTab)
end)
playersTabBtn.MouseButton1Click:Connect(function()
	showTab(playersTab)
end)
guiTabBtn.MouseButton1Click:Connect(function()
	showTab(guiTab)
end)

--------------------------------------------------------
-- MOVEMENT TAB FUNCTIONALITY
--------------------------------------------------------

local function createLabel(parent, text, pos)
	local lbl = Instance.new("TextLabel")
	lbl.Size = UDim2.new(0.4, 0, 0, 25)
	lbl.Position = pos
	lbl.BackgroundTransparency = 1
	lbl.Text = text
	lbl.TextColor3 = Color3.new(1, 1, 1)
	lbl.TextSize = 18
	lbl.Font = Enum.Font.GothamSemibold
	lbl.ZIndex = 5
	lbl.Parent = parent
	return lbl
end

local function createValueLabel(parent, pos)
	local val = Instance.new("TextLabel")
	val.Size = UDim2.new(0.2, 0, 0, 25)
	val.Position = pos
	val.BackgroundTransparency = 1
	val.TextColor3 = Color3.fromRGB(255, 255, 0)
	val.TextSize = 18
	val.Font = Enum.Font.Gotham
	val.ZIndex = 5
	val.Parent = parent
	return val
end

local function createButton(parent, symbol, pos)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, 25, 0, 25)
	btn.Position = pos
	btn.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
	btn.Text = symbol
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 20
	btn.ZIndex = 5
	btn.AutoButtonColor = true
	btn.Parent = parent
	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 6)
	corner.Parent = btn
	return btn
end

-- Speed controls
local speedLabel = createLabel(movementTab, "Speed:", UDim2.new(0.05, 0, 0, 10))
local speedValue = createValueLabel(movementTab, UDim2.new(0.45, 0, 0, 10))
local speedPlus = createButton(movementTab, "+", UDim2.new(0.7, 0, 0, 10))
local speedMinus = createButton(movementTab, "-", UDim2.new(0.85, 0, 0, 10))

-- Jump controls
local jumpLabel = createLabel(movementTab, "JumpPower:", UDim2.new(0.05, 0, 0, 45))
local jumpValue = createValueLabel(movementTab, UDim2.new(0.45, 0, 0, 45))
local jumpPlus = createButton(movementTab, "+", UDim2.new(0.7, 0, 0, 45))
local jumpMinus = createButton(movementTab, "-", UDim2.new(0.85, 0, 0, 45))

-- Inf Jump + Noclip
local infJumpLabel = createLabel(movementTab, "Infinite Jump:", UDim2.new(0.05, 0, 0, 80))
local infJumpToggle = createButton(movementTab, "‚ùå", UDim2.new(0.45, 0, 0, 80))

local noclipLabel = createLabel(movementTab, "Noclip:", UDim2.new(0.05, 0, 0, 115))
local noclipToggle = createButton(movementTab, "‚ùå", UDim2.new(0.45, 0, 0, 115))

-- Update display
local function updateValues()
	speedValue.Text = tostring(HUM.WalkSpeed)
	jumpValue.Text = tostring(HUM.JumpPower)
end
updateValues()

-- Movement logic
speedPlus.MouseButton1Click:Connect(function()
	HUM.WalkSpeed += INCREMENT
	updateValues()
end)
speedMinus.MouseButton1Click:Connect(function()
	HUM.WalkSpeed -= INCREMENT
	updateValues()
end)
jumpPlus.MouseButton1Click:Connect(function()
	HUM.JumpPower += INCREMENT
	updateValues()
end)
jumpMinus.MouseButton1Click:Connect(function()
	HUM.JumpPower -= INCREMENT
	updateValues()
end)

-- Infinite Jump
local infJumpEnabled = false
infJumpToggle.MouseButton1Click:Connect(function()
	infJumpEnabled = not infJumpEnabled
	infJumpToggle.Text = infJumpEnabled and "‚úÖ" or "‚ùå"
end)
UIS.JumpRequest:Connect(function()
	if infJumpEnabled and HUM then
		HUM:ChangeState(Enum.HumanoidStateType.Jumping)
	end
end)

-- Noclip
local noclipEnabled = false
noclipToggle.MouseButton1Click:Connect(function()
	noclipEnabled = not noclipEnabled
	noclipToggle.Text = noclipEnabled and "‚úÖ" or "‚ùå"
end)
RS.Stepped:Connect(function()
	if noclipEnabled and CHAR then
		for _, part in pairs(CHAR:GetDescendants()) do
			if part:IsA("BasePart") then
				part.CanCollide = false
			end
		end
	end
end)

PLAYER.CharacterAdded:Connect(function(newChar)
	CHAR = newChar
	HUM = CHAR:WaitForChild("Humanoid")
	updateValues()
end)

--------------------------------------------------------
-- TOGGLE BUTTON
--------------------------------------------------------

local toggle = Instance.new("TextButton")
toggle.Size = UDim2.new(0, 60, 0, 60)
toggle.Position = UDim2.new(0.05, 0, 0.3, 0)
toggle.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
toggle.BackgroundTransparency = 0.4
toggle.Text = "ü©∏"
toggle.TextSize = 28
toggle.TextColor3 = Color3.new(1, 1, 1)
toggle.Font = Enum.Font.GothamBlack
toggle.BorderSizePixel = 0
toggle.Active = true
toggle.Draggable = true
toggle.ZIndex = 10
toggle.Parent = gui

local glow = Instance.new("UIStroke")
glow.Thickness = 2
glow.Color = Color3.fromRGB(255, 100, 100)
glow.Parent = toggle

local tCorner = Instance.new("UICorner")
tCorner.CornerRadius = UDim.new(1, 0)
tCorner.Parent = toggle

-- Toggle open/close
toggle.MouseButton1Click:Connect(function()
	local state = not panel.Visible
	panel.Visible = state
	fadeOverlay(state)
end)


--// ü©∏ JELLY HUB - BY VEX
--// SECTION 2: Players Tab + GUI Tab
-- Works with Section 1 (Core + Movement)

-- ü©∏ Fix: Ensure the GUI and PlayersTab are ready before populating
local function waitForDescendant(parent, name)
	local item
	repeat
		item = parent:FindFirstChild(name, true)
		task.wait()
	until item
	return item
end

-- Wait for GUI to exist in public servers
local playerGui = PLAYER:WaitForChild("PlayerGui")
local gui = waitForDescendant(playerGui, "JellyHub")
local panel = waitForDescendant(gui, "Frame")

-- Find or wait for named tabs
local playersTab = waitForDescendant(panel, "PlayersTab")
local movementTab = waitForDescendant(panel, "MovementTab")
local guiTab = waitForDescendant(panel, "GUITab")
