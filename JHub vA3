guiTab:ClearAllChildren()

local fovLbl = Instance.new("TextLabel")
fovLbl.Size = UDim2.new(0.4, 0, 0, 25)
fovLbl.Position = UDim2.new(0.05, 0, 0, 10)
fovLbl.BackgroundTransparency = 1
fovLbl.Text = "FOV:"
fovLbl.TextColor3 = Color3.new(1, 1, 1)
fovLbl.TextSize = 18
fovLbl.Font = Enum.Font.GothamSemibold
fovLbl.Parent = guiTab

local fovValue = Instance.new("TextLabel")
fovValue.Size = UDim2.new(0.2, 0, 0, 25)
fovValue.Position = UDim2.new(0.45, 0, 0, 10)
fovValue.BackgroundTransparency = 1
fovValue.TextColor3 = Color3.fromRGB(255, 255, 0)
fovValue.TextSize = 18
fovValue.Font = Enum.Font.Gotham
fovValue.Parent = guiTab

local fovPlus = Instance.new("TextButton")
fovPlus.Size = UDim2.new(0, 25, 0, 25)
fovPlus.Position = UDim2.new(0.7, 0, 0, 10)
fovPlus.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
fovPlus.Text = "+"
fovPlus.TextColor3 = Color3.new(1, 1, 1)
fovPlus.Font = Enum.Font.GothamBold
fovPlus.TextSize = 20
fovPlus.Parent = guiTab
Instance.new("UICorner", fovPlus).CornerRadius = UDim.new(0, 6)

local fovMinus = fovPlus:Clone()
fovMinus.Text = "-"
fovMinus.Position = UDim2.new(0.85, 0, 0, 10)
fovMinus.Parent = guiTab

local glowLbl = Instance.new("TextLabel")
glowLbl.Size = UDim2.new(0.4, 0, 0, 25)
glowLbl.Position = UDim2.new(0.05, 0, 0, 50)
glowLbl.BackgroundTransparency = 1
glowLbl.Text = "Screen Glow:"
glowLbl.TextColor3 = Color3.new(1, 1, 1)
glowLbl.TextSize = 18
glowLbl.Font = Enum.Font.GothamSemibold
glowLbl.Parent = guiTab

local glowToggle = Instance.new("TextButton")
glowToggle.Size = UDim2.new(0, 40, 0, 25)
glowToggle.Position = UDim2.new(0.45, 0, 0, 50)
glowToggle.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
glowToggle.Text = "‚ùå"
glowToggle.TextColor3 = Color3.new(1, 1, 1)
glowToggle.Font = Enum.Font.GothamBold
glowToggle.TextSize = 18
glowToggle.Parent = guiTab
Instance.new("UICorner", glowToggle).CornerRadius = UDim.new(0, 6)

local glow = LIGHTING:FindFirstChild("JellyHubGlow") or Instance.new("BloomEffect")
glow.Name = "JellyHubGlow"
glow.Enabled = false
glow.Intensity = 0.4
glow.Threshold = 1
glow.Parent = LIGHTING

-- GUI logic
local function updateFOV()
	fovValue.Text = tostring(math.floor(CAMERA.FieldOfView))
end
updateFOV()

fovPlus.MouseButton1Click:Connect(function()
	CAMERA.FieldOfView += 2
	updateFOV()
end)
fovMinus.MouseButton1Click:Connect(function()
	CAMERA.FieldOfView -= 2
	updateFOV()
end)

local glowEnabled = false
glowToggle.MouseButton1Click:Connect(function()
	glowEnabled = not glowEnabled
	glow.Enabled = glowEnabled
	glowToggle.Text = glowEnabled and "‚úÖ" or "‚ùå"
end)
